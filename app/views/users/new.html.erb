<h1>User Signup</h1>

<%= form_tag '/users' , metod: :post do %>

<div>
  <%= label_tag :name %>
  <%= text_field_tag :name %>
</div>

<div>
  <%= label_tag :email %>
  <%= text_field_tag :email %>
</div>

<div>
  <%= label_tag :password %>
  <%= text_field_tag :password %>
</div>

<div>
  <%= label_tag :password_confirmation %>
  <%= text_field_tag :password_confirmation %>
</div>

 <%= submit_tag "Submit" %>

<% end %>

