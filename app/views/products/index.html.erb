  <h1>Shiran's Pet Store</h1>
    <% if current_user && current_user.admin %>
        <a href="/products/new">Add new product <span class="sr-only">(current)</span></a>
    <% end %>
          <div class="row">
    <%@products.each do |product|%>
    <div class="col-md-3">
      <a href="/products/<%= product.id %>">
        <img src="<%= product.images.sample.url if product.images.any? %>" >
        <% if product.sale_message == "Discount Item!" %>
        <p class="sale"><%= product.sale_message%></p>
        <% else %>
        <p><%= product.sale_message%></p>
        <% end %>
        <p><%= product.name %></p>
        <p>price <%= product.price%></p>
        <p>tax <%= number_to_currency(product.tax)%></p>
        <p>total-<%= product.total%></p>
        <p>availability- <%= product.availability%></p>

<!--         <%= link_to "Delete", "/products/#{product.id}", method: :delete %>
        <%= link_to 'Edit' , "products/#{product.id}/edit"%> -->
      </a>

    </div>

    <%end%>
  </div>

