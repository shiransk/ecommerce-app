<div class="row">
<div class="row-md-3"></div>

  <div class="row-md-6">
    <h1>Edit Product</h1>

    <% if @product && @product.errors.any? %>

      <ul>
        <% @product.errors.full_messages.each do |message| %>
        <li class="error"> <%= message %></li>
        <% end %>
      </ul>

    <% end %>

    <%= form_tag "/products/#{@product.id}", method: :patch do %>

      <div class="form-group">
        <%= label_tag :name %>
        <%= text_field_tag :name ,@product.name , class: 'form-control' %>
      </div>

      <div class="form-group">
        <%= label_tag :price  %>
        <%= text_field_tag :price , @product.price, class: 'form-control'%>
      </div>

      <div class="form-group">
        <%= label_tag :description  %>
        <%= text_field_tag :description, @product.description, class: 'form-control' %>
      </div>

      <div class="form-group">
        <%= label_tag :availability , "availability" %>
        <%= text_field_tag :availability , @product.availability, class: 'form-control' %>
      </div> 

      <div>
        <%= submit_tag "Update Product" %>
      </div>
    </div>

    <% end %>
</div>